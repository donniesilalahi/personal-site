{
  "$schema": "https://opencode.ai/config.json",

  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "tanstack": {
      "type": "remote",
      "url": "https://tanstack.com/api/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer ts_e506d8bb172e38f71b617515d7972afb97c179dc78b7d2033aa9060f07f9a0d1"
      }
    },
    "shadcn": {
      "type": "local",
      "command": ["npx", "-y", "shadcn@latest", "mcp"],
      "enabled": true
    },
    "cloudflare-docs": {
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/mcp",
      "enabled": true
    },
    "figma-local": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "mcp_everything": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-everything"],
      "enabled": true
    },
    "github": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-github",
        "--github-fine-grained-pat",
        "{env:GITHUB_FINE_GRAINED_PAT}"
      ],
      "enabled": true
    },
    "posthog": {
      "type": "remote",
      "url": "https://mcp.posthog.com/mcp",
      "enabled": true,
      "headers": {
        "Authorization": "Bearer phx_XQw3UJcMXP6vhUE6CKwjqOiWLGlOBBzTHbWchu8QBwKe8ii"
      }
    }
  },
  "tools": {
    "mcp_everything": false
  }
}
